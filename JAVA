    //ler informações do teclado.
    import java.util.Scanner;

public class DEPOSITO {
    public static void main(String[] args) {
        double saldo = 0; // saldo inicial
        Scanner scanner = new Scanner(System.in);

        System.out.println("Bem-vindo ao Caixa Eletrônico!");
        System.out.println("Seu saldo atual é: R$ " + saldo);

        System.out.print("Digite o valor que deseja depositar: ");
        double valorDeposito = scanner.nextDouble();

        if (valorDeposito > 0) {
            saldo += valorDeposito; // adiciona o depósito
            System.out.println("Depósito realizado com sucesso!");
            System.out.println("Seu novo saldo é: R$ " + saldo);
        } else {
            System.out.println("Valor inválido! O depósito deve ser maior que zero.");
        }

        scanner.close();
    }
}
